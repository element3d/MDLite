<Element
  width="m: (300, 300, 600), d: (300, 300, 300)"
  height="m: (20, 30, 50), d: (20, 20, 20)">

  <Element
    element="mBackground"
    width="100%"
    height="6dp"
    borderRadius="all: 0.5"
    backgroundColor="glm::vec4(96, 2, 238, 255)">
  </Element>

  <Element
    element="mValue"
    positionType="Absolute"
    left="0"
    height="30%"
    borderRadius="all: 0.5">
  </Element>

  <Element
    element="mDivisions"
    positionType="Absolute"
    alignItemsHor="SpaceBetween"
    left="0"
    width="100%"
    height="6dp">
  </Element>

  <Element
    element="mHoverCircle"
    positionType="Absolute"
    left="0"
    opacity="0"
    aspectRatio="1"
    height="100%"
    shapeType="Circle">
  </Element>

  <Element
    element="mInfo"
    positionType="Absolute"
    left="0"
    orientation="Vertical"
    visibility="Gone">
    <Element
      element="mInfoShape"
      backgroundColor="r: 100, g: 100, b: 100"
      borderRadius="all: 10">
      <Text
        element="mInfoText"
        fontSize="16dp"
        textColor="all: 255"
        marginLeft="16dp"
        marginRight="16dp"
        marginTop="8dp"
        marginBottom="8dp">
      </Text>
    </Element>
    <Element
      element="mInfoTriangle"
      width="16dp"
      height="8dp"
      borderType="Cut"
      borderRadius="glm::vec4(0, 0, 1, 1)"
      backgroundColor="r: 100, g: 100, b: 100">
    </Element>
  </Element>
  <Element
    element="mCircle"
    positionType="Absolute"
    left="0"
    aspectRatio="1"
    opacity="1.0"
    height="100%"
    shapeType="Circle"
    backgroundColor="glm::vec4(96, 2, 238, 255)">
  </Element>

</MDBaseElement>