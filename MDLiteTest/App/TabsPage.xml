<Element
  orientation="Vertical"
  alignItemsVer="Start"
  backgroundColor="glm::vec4(200, 200, 200, 255)">

  <Element
    width="100%"
    height="m: 0, d: 40"
    alignItemsHor="Start">
    <MDIconButton
      element="mBack"
      name="_s(arrow_back)">
    </MDIconButton>
  </Element>

  <Element
    marginTop="m: 0, d: 20"
    width="m: 100%, d: 500"
    height="m: 100%, d: 700"
    orientation="Vertical"
    backgroundColor="all: 255">
    <MDAppBar
      alignItemsHor="Start">
      <MDAppBarTitle
        text="Tabs">
      </MDAppBarTitle>
    </MDAppBar>
    <Element
      width="100%"
      height="100%"
      orientation="Vertical"
      scaling="Shrink">

      <MDTabBar
        element="mTabBar"
        width="100%"
        isScrollable="false">
        <MDTab
          leadingIcon="_s(favorite)"
          textLabel="_s(RED)">
        </MDTab>
        <MDTab
          leadingIcon="_s(favorite)"
          textLabel="_s(ORANGE)">
        </MDTab>
        <MDTab
          leadingIcon="_s(favorite)"
          textLabel="_s(GREEN)">
        </MDTab>
      </MDTabBar>
      <MDTabBarView
        element="mTabBarView"
        tabBar="mTabBar"
        width="100%"
        height="100%"
        scaling="Shrink">

        <Element>
          <Text
            text="RED"
            fontSize="30dp">
          </Text>
        </Element>
        <Element>
          <Text
            text="Orange"
            fontSize="30dp">
          </Text>
        </Element>
        <Element>
          <Text
            text="GREEN"
            fontSize="30dp">
          </Text>
        </Element>

      </MDTabBarView>
    </Element>
  </Element>


  

</Element>