<MDElement
  orientation="Vertical"
  alignItemsVer="Start"
  backgroundColor="MDTheme::Get()->Background">


  <Element
    width="100%"
    height="m: 0, d: 40"
    alignItemsHor="Start">
    <MDIconButton
      element="mBack"
      name="_s(arrow_back)">
    </MDIconButton>
  </Element>



  <MDScaffold
    marginTop="m: 0, d: 50"
    width="m: 100%, d: 500"
    height="m: 100%, d: 700"
    orientation="Vertical"
    backgroundColor="all: 255">
    <MDAppBar
      alignItemsHor="Start">
      <MDAppBarAction
        element="mDrawerButton"
        name="_s(menu)"
        color="glm::vec4(255)">
      </MDAppBarAction>
      <MDAppBarTitle
        text="Drawer">
      </MDAppBarTitle>
    </MDAppBar>
    <Element
      width="100%"
      height="100%"
      orientation="Vertical"
      scaling="Shrink">

     
    </Element>
    <MDDrawer
      element="mDrawer">
      <Element
        width="m: 80%, d: 60%"
        height="100%"
        overflow="Hidden"
        backgroundColor="all: 255"
        alignItemsVer="Start"
        orientation="Vertical">

        <Element
          width="100%"
          height="30%"
          backgroundColor="MDColors::Primary::Get()">

        </Element>
        <MDListTile
          element="mItem1"
          leading='new MDIcon("favorite", 64 , MDColors::Grey::Get())'
          title="_s(Item One)">
        </MDListTile>
        <MDListTile
          element="mItem2"
          leading='new MDIcon("comment", 64, MDColors::Grey::Get())'
          title="_s(Item Two)">
        </MDListTile>

      </Element>
    </MDDrawer>
  </MDScaffold>

</MDElement>