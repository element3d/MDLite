<Element
  orientation="Vertical"
  alignItemsVer="Start"
  backgroundColor="glm::vec4(200, 200, 200, 255)">

  <var
    name="mRadioGroup">
    <MDRadioGroup>
    </MDRadioGroup>
  </var>

  <Element
    width="100%"
    height="m: 0, d: 40"
    alignItemsHor="Start">
    <MDIconButton
      element="mBack"
      name="_s(arrow_back)">
    </MDIconButton>
  </Element>

  <Element
    marginTop="m: 0, d: 50"
    width="m: 100%, d: 500"
    height="m: 100%, d: 700"
    orientation="Vertical"
    backgroundColor="all: 255">
    <MDAppBar
      alignItemsHor="Start">
      <MDAppBarTitle
        text="Selection controls">
      </MDAppBarTitle>
    </MDAppBar>
    <Element
      width="100%"
      height="100%"
      orientation="Vertical"
      scaling="Shrink">

      <Text
        text="MDCheckbox"
        fontSize="18"
        fontStyle="Bold"
        textColor='MDColors::Grey::Get("800")'>
      </Text>
      <Element
        marginTop="20">
        <Element
          element="mCheckTest1"
          width="40"
          height="5"
          backgroundColor="MDColors::Grey::Get()"
          marginRight="10">
        </Element>
        <Element
          element="mCheckTest2"
          width="40"
          height="5"
          backgroundColor="MDColors::Grey::Get()"
          marginRight="10">
        </Element>
        <Element
          element="mCheckTest3"
          width="40"
          height="5"
          backgroundColor="MDColors::Grey::Get()">
        </Element>
      </Element>
      <Element>
        <MDCheckbox
          element="mCheckbox1">
        </MDCheckbox>
        <MDCheckbox
          element="mCheckbox2">
        </MDCheckbox>
        <MDCheckbox
          element="mCheckbox3">
        </MDCheckbox>
      </Element>

      <Text
        text="MDRadio"
        marginTop="40"
        fontSize="18"
        fontStyle="Bold"
        textColor='MDColors::Grey::Get("800")'>
      </Text>
      <Element
        marginTop="20">
        <Element
          element="mRadioTest1"
          width="40"
          height="5"
          backgroundColor="MDColors::Grey::Get()"
          marginRight="10">
        </Element>
        <Element
          element="mRadioTest2"
          width="40"
          height="5"
          backgroundColor="MDColors::Grey::Get()"
          marginRight="10">
        </Element>
        <Element
          element="mRadioTest3"
          width="40"
          height="5"
          backgroundColor="MDColors::Grey::Get()">
        </Element>
      </Element>
      <Element>
        <MDRadio
          element="mRadio1"
          group="mRadioGroup">
        </MDRadio>
        <MDRadio
          element="mRadio2"
          group="mRadioGroup">
        </MDRadio>
        <MDRadio
          element="mRadio3"
          group="mRadioGroup">
        </MDRadio>
      </Element>

      <Text
        text="MDSwitch"
        marginTop="40"
        fontSize="18"
        fontStyle="Bold"
        textColor='MDColors::Grey::Get("800")'>
      </Text>
      <Element
        marginTop="20">
        <Element
          element="mSwitchTest1"
          width="40"
          height="5"
          backgroundColor="MDColors::Grey::Get()"
          marginRight="10">
        </Element>
      </Element>
      <MDSwitch
        element="mSwitch"
        marginTop="20">
      </MDSwitch>
    </Element>
  </Element>

</Element>