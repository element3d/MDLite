<Element
  orientation="Vertical"
  alignItemsVer="Start"
  backgroundColor="glm::vec4(200, 200, 200, 255)">

  <Element
    width="100%"
    height="m: 0, d: 40"
    alignItemsHor="Start">
    <MDIconButton
      element="mBack"
      name="_s(arrow_back)">
    </MDIconButton>
  </Element>

  <Element
    marginTop="m: 0, d: 20"
    width="m: 100%, d: 500"
    height="m: 100%, d: 700"
    orientation="Vertical"
    backgroundColor="all: 255">
    <MDAppBar
      alignItemsHor="Start">
      <MDAppBarTitle
        text="Sliders">
      </MDAppBarTitle>
    </MDAppBar>
    <Element
      width="100%"
      height="100%"
      orientation="Vertical"
      scaling="Shrink">

      <MDInput
        element="mInput"
        width="m: 300, d: 100">
      </MDInput>

      <MDSlider
        element="mSlider"
        marginTop="m: 90, d: 30">
      </MDSlider>

      <MDSlider
        element="mDivSlider"
        divisions="5"
        marginTop="m: 90, d: 30">   
      </MDSlider>
    </Element>
  </Element>



</Element>