<Element
  orientation="Vertical"
  alignItemsVer="Start"
  backgroundColor="glm::vec4(200, 200, 200, 255)">

  <Element
    width="100%"
    height="40"
    alignItemsHor="Start">
    <MDIconButton
      element="mBack"
      name="_s(arrow_back)">
    </MDIconButton>
  </Element>

  <MDScaffold
    marginTop="20"
    width="500"
    height="700"
    orientation="Vertical">
    <MDAppBar
      alignItemsHor="Start">
      <Text
        text="Sliders"
        fontSize="18"
        textColor="all: 255"
        fontStyle="Bold"
        marginLeft="40">
      </Text>
    </MDAppBar>
    <Element
      width="100%"
      height="100%"
      orientation="Vertical"
      scaling="Shrink">

      <MDInput
        labelText="_s(Name*)"
        hintText="_s(What do people call you?)">
      </MDInput>

      <MDInput
        marginTop="20"
        labelText="_s(Phone number*)"
        hintText="_s(Where can we reach you?)"
        prefixText="_s(+1)">
      </MDInput>
    </Element>
  </MDScaffold>

</Element>