<Element
  orientation="Vertical"
  alignItemsVer="Start"
  backgroundColor="glm::vec4(200, 200, 200, 255)">

  <Element
    width="100%"
    height="m: 0, d: 40"
    alignItemsHor="Start">
    <MDIconButton
      element="mBack"
      name="_s(arrow_back)">
    </MDIconButton>
  </Element>

  <MDScaffold
    marginTop="m: 0, d: 20"
    width="m: 100%, d: 500"
    height="m: 100%, d: 700"
    orientation="Vertical">
    <MDAppBar
      alignItemsHor="Start">
       <MDAppBarTitle
        text="Text Fields">
      </MDAppBarTitle>
    </MDAppBar>
    <Element
      width="100%"
      height="100%"
      orientation="Vertical"
      scaling="Shrink">

      <MDInput
        labelText="_s(Name*)"
        hintText="_s(What do people call you?)">
      </MDInput>

      <MDInput
        marginTop="20dp"
        labelText="_s(Phone number*)"
        hintText="_s(Where can we reach you?)"
        prefixText="_s(+1)">
      </MDInput>
    </Element>
  </MDScaffold>

</Element>