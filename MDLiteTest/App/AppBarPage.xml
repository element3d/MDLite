<MDElement
  orientation="Vertical"
  alignItemsVer="Start"
  backgroundColor="MDTheme::Get()->Background">

  <var
    name="mMenuBody">
    <MDMenuBody>
      <MDMenuItem>
        <MDListTile
          title="_s(menu 1)">
        </MDListTile>
      </MDMenuItem>
      <MDMenuItem
        enabled="false">
        <MDListTile
          title="_s(menu 2)">
        </MDListTile>
      </MDMenuItem>
    </MDMenuBody>
  </var>

  <Element
    width="100%"
    height="m: 0, d: 40"
    alignItemsHor="Start">
    <MDIconButton
      element="mBack"
      color="MDTheme::Get()->OnBackground"
      name="_s(arrow_back)">
    </MDIconButton>
  </Element>

  <MDScaffold
    marginTop="m: 0, d: 50"
    width="m: 100%, d: 500"
    height="m: 100%, d: 700"
    orientation="Vertical"
    backgroundColor="all: 255">
    <MDAppBar
      alignItemsHor="SpaceBetween">
      <Element>
        <MDAppBarAction
          name="_s(menu)"
          color="glm::vec4(255)">
        </MDAppBarAction>
        <MDAppBarTitle
          text="App bar">
        </MDAppBarTitle>
      </Element>
      <Element>
        <MDAppBarAction
          name="_s(menu)"
          color="glm::vec4(255)">
        </MDAppBarAction>
        <MDAppBarAction
          name="_s(menu)"
          color="glm::vec4(255)">
        </MDAppBarAction>
        <MDMenu
          body="mMenuBody">
          <MDAppBarAction
            name="_s(more_vert)">
          </MDAppBarAction>
        </MDMenu>
      </Element>
    </MDAppBar>
    <Element
      width="100%"
      height="100%"
      orientation="Vertical"
      scaling="Shrink">
       
    </Element>
  </MDScaffold>

</MDElement>